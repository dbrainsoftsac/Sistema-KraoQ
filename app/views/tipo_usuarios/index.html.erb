<div class="page-header">
  <%= link_to new_tipo_usuario_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    Nuevo Tipo usuario
  <% end %>
  <h1>Lista de tipos de usuarios</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>Nombre tipo usuario</th>
            <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @tipo_usuarios) do |tipo_usuario| %>
            <td><%= tipo_usuario.no_tipo_usuario %></td>
            <td><%= link_to 'Ver', tipo_usuario %></td>
        <td><%= link_to 'Editar', edit_tipo_usuario_path(tipo_usuario) %></td>
        <td><%= link_to 'Eliminar', tipo_usuario, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tbody>
  </table>
</div>
