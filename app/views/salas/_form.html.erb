<%= form_for(@sala, html: { class: "form-horizontal", role: "form" }) do |f| %>
  <% if @sala.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@sala.errors.count, "error") %> prohibited this sala from being saved:</h4>

      <ul>
      <% @sala.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :Local, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
     <!-- <%= f.text_field :Local, class: "form-control" %> -->
      
      <%= f.collection_select :Local_id, Local.order(:no_local),:id,:no_local, include_blank: true %>
      
    </div>
  </div>
  <div class="form-group">
    <%= f.label :no_sala, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_area :no_sala, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :qt_capacidad, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :qt_capacidad, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :tx_sala_descripcion, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_area :tx_sala_descripcion, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
