<div class="page-header">
  <%= link_to new_sala_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    Nueva Sala
  <% end %>
  <h1>Lista de salas</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>Local</th>
            <th>Nombre Sala</th>
            <th>Capacidad</th>
            <th>Descripcion</th>
            <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @salas) do |sala| %>
            <td><%= sala.Local.no_local %></td>
            <td><%= sala.no_sala %></td>
            <td><%= sala.qt_capacidad %></td>
            <td><%= sala.tx_sala_descripcion %></td>
            <td><%= link_to 'Ver', sala %></td>
        <td><%= link_to 'Editar', edit_sala_path(sala) %></td>
        <td><%= link_to 'Eliminar', sala, method: :delete, data: { confirm: '¿Está seguro?' } %></td>
      <% end %>
    </tbody>
  </table>
</div>
