<%= simple_form_for(@user) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">

	<%= f.text_field :email, :readonly=>true %> 
 
 
   <%= f.select :role, User.roles.keys , {prompt: "Selecione un artista"}, {class: "form-control"} %>

 
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
