<p id="notice"><%= notice %></p>

<h1>Listia Usuarios</h1>


<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
      <th>Nombres</th>
      <th>Tipousuario</th>
      <th>Apellido paterno</th>
      <th>Apellido materno</th>
      <th>Dni</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @usuarios.each do |usuario| %>
      <tr>
        <td><%= usuario.no_usuario %></td>
        <td><%= usuario.TipoUsuario.no_tipo_usuario %></td>
        <td><%= usuario.no_apellido_paterno %></td>
        <td><%= usuario.no_apellido_materno %></td>
        <td><%= usuario.no_dni %></td>
        <td><%= usuario.email %></td>
        <td><%= link_to 'Show', usuario %></td>
        <td><%= link_to 'Edit', edit_usuario_path(usuario) %></td>
        <td><%= link_to 'Destroy', usuario, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

<br>

