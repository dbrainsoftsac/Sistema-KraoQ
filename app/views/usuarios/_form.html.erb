<%= form_for(@usuario, html: { class: "form-horizontal", role: "form" }) do |f| %>
  <% if @usuario.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@usuario.errors.count, "error") %> prohibited this usuario from being saved:</h4>

      <ul>
      <% @usuario.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :no_usuario, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_area :no_usuario, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :TipoUsuario, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.collection_select :TipoUsuario_id, TipoUsuario.order(:no_tipo_usuario),:id,:no_tipo_usuario, include_blank: true %>
      
      <!-- <%= f.text_field :TipoUsuario, class: "form-control" %> -->
    </div>
  </div>
  <div class="form-group">
    <%= f.label :no_apellido_paterno, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_area :no_apellido_paterno, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :no_apellido_materno, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_area :no_apellido_materno, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :no_dni, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :no_dni, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :email, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :email, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
