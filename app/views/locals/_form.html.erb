<%= simple_form_for(@local) do |f| %>
  <%= f.error_notification  %>

  <div class="form-inputs">
    <%= f.input :no_local , :required => 'required' %>
    <%= f.input :tx_direccion , :required => 'required' %>
    <%= f.input :tx_telefono ,  :required => 'required' %>
    <%= f.input :tx_correo , type:'email', placeholder: "Email", :required => 'required' %>

    <%= f.input :tx_descripcion , :required => 'required' %>
    <%= f.input :co_administrador , :required => 'required' %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
