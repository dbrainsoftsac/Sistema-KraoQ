<%= form_for(@producto, html: { class: "form-horizontal", role: "form" }) do |f| %>
  <% if @producto.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@producto.errors.count, "error") %> prohibited this producto from being saved:</h4>

      <ul>
      <% @producto.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :no_producto, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_area :no_producto, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :TipoProducto, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <!-- <%= f.text_field :TipoProducto, class: "form-control" %> -->
      <%= f.collection_select :TipoProducto_id, TipoProducto.order(:no_tipo_producto),:id,:no_tipo_producto, include_blank: true %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :ss_precio_producto, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :ss_precio_producto, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :fl_disponible, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.check_box :fl_disponible, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
