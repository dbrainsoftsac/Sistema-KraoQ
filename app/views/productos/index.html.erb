<div class="page-header">
  <%= link_to new_producto_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    Nuevo Producto
  <% end %>
  <h1>Lista de productos</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>Nombre producto</th>
            <th>Tipo producto</th>
            <th>Precio </th>
            <th>disponible</th>
            <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @productos) do |producto| %>
            <td><%= producto.no_producto %></td>
            <td><%= producto.TipoProducto %></td>
            <td><%= producto.ss_precio_producto %></td>
            <td><%= producto.fl_disponible %></td>
            <td><%= link_to 'Ver', producto %></td>
        <td><%= link_to 'Editar', edit_producto_path(producto) %></td>
        <td><%= link_to 'Eliminar', producto, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tbody>
  </table>
</div>
