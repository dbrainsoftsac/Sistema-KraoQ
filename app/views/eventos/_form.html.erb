<%= form_for(@evento, html: { class: "form-horizontal", role: "form" }) do |f| %>
  <% if @evento.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@evento.errors.count, "error") %> prohibited this evento from being saved:</h4>

      <ul>
      <% @evento.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :no_evento, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_area :no_evento, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :Local, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :Local, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :fe_fecha_evento, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.datetime_select :fe_fecha_evento, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :qt_capacidad, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :qt_capacidad, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :tx_descripcion_evento, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_area :tx_descripcion_evento, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
